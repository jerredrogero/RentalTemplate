# Movin' In Frontend Environment Configuration Template
# Rename this file to .env and update the values

# General
VITE_APP_MODE=development
VITE_APP_COMPANY_NAME=Movin' In
VITE_APP_OWNER_MODE=true
VITE_APP_LANGUAGES=en,fr
VITE_APP_DEFAULT_LANGUAGE=en
VITE_APP_DEFAULT_CURRENCY=USD

# API Endpoints
VITE_APP_API_HOST=localhost
VITE_APP_API_PORT=4002
VITE_APP_SECURE_API=false
VITE_APP_LOCAL_API_URL=http://localhost:4002

# Payment Integration
VITE_APP_STRIPE_ENABLED=false
VITE_APP_STRIPE_KEY=your_stripe_publishable_key

VITE_APP_PAYPAL_ENABLED=false
VITE_APP_PAYPAL_CLIENT_ID=your_paypal_client_id
VITE_APP_PAYPAL_CURRENCY=USD

# Brand Colors (Format: hexadecimal without '#')
VITE_APP_PRIMARY_COLOR=1976d2
VITE_APP_SECONDARY_COLOR=f50057
VITE_APP_SUCCESS_COLOR=2e7d32
VITE_APP_ERROR_COLOR=d32f2f

# Security
VITE_APP_TFA_ENABLED=false 