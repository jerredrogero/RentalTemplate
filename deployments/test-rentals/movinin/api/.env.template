# Movin' In API Environment Configuration Template
# Rename this file to .env and update the values

# General
NODE_ENV=development
MI_PORT=4002
MI_HTTPS=false
MI_WEBSITE_URL=http://localhost:3000
MI_ADMIN_URL=http://localhost:3003
MI_WEBSITE_NAME=Movin' In
MI_DEFAULT_LANGUAGE=en
MI_TFA_ENABLED=false
MI_USER_DEFAULT_CURRENCY=USD

# MongoDB
MI_DB_URI=mongodb://movinin:movinin@localhost:27017/movinin

# JWT
MI_JWT_SECRET=YOUR_JWT_SECRET
MI_JWT_EXPIRE=3600
MI_JWT_REFRESH_EXPIRE=86400

# SMTP Email
MI_SMTP_HOST=smtp.example.com
MI_SMTP_PORT=587
MI_SMTP_USER=noreply@example.com
MI_SMTP_PASS=your_smtp_password
MI_SMTP_FROM=noreply@example.com

# VRBO Integration
MI_VRBO_ENABLED=false
MI_VRBO_API_KEY=your_vrbo_api_key
MI_VRBO_API_SECRET=your_vrbo_api_secret
MI_VRBO_BASE_URL=https://api.vrbo.com

# Payment Processing
MI_STRIPE_ENABLED=false
MI_STRIPE_SECRET_KEY=your_stripe_secret_key
MI_STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

MI_PAYPAL_ENABLED=false
MI_PAYPAL_CLIENT_ID=your_paypal_client_id
MI_PAYPAL_CLIENT_SECRET=your_paypal_client_secret
MI_PAYPAL_ENVIRONMENT=sandbox

# CDN Configuration
MI_CDN_PROPERTIES=cdn/properties
MI_CDN_USERS=cdn/users
MI_CDN_TEMP=cdn/temp
MI_CDN_LOGS=logs 